{
  "variables": {
    "headless": "false",
    "iso_checksum": "c94de1cc2e10160f325eb54638a5b5aa38f181d60ee33dae9578d96d932ee5f8",  
    "iso_checksum_type": "sha256",
    "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.5-server-amd64.iso",   
    "docker_hub_username": "{{ env `DOCKER_HUB_USERNAME` }}",
    "docker_hub_password": "{{ env `DOCKER_HUB_PASSWORD` }}",
    "tag_version": "0.{{timestamp}}"
  },
  "builders": [
  {
    "type": "docker",
    "image": "firedot/xenial_nginx",
    "commit": true
   }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_hub_username`}}/xenial_nginx",
        "tag": "{{user `tag_version`}}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_hub_username`}}",
        "login_password": "{{user `docker_hub_password`}}"
      }
    ]],
  "provisioners": [
  {
    "type": "shell",
    "script": "./scripts/nginx_install.sh"
}
 ]
}
